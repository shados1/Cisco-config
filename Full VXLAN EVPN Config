LEAF

nv overlay evpn
feature ospf
feature bgp
feature pim
feature fabric forwarding
feature interface-vlan
feature vn-segment-vlan-based
feature nv overlay

fabric forwarding anycast-gateway-mac 0000.0000.0001
ip pim rp-address 7.7.7.7 group-list 225.0.0.0/24 bidir
ip pim ssm range 232.0.0.0/8
vlan 1,10,20,100
vlan 10
  vn-segment 10010
vlan 20
  vn-segment 10020
vlan 100
  vn-segment 10000

route-map EVPN permit 10
vrf context Tenant
  vni 10000
  rd auto
  address-family ipv4 unicast
    route-target both auto
    route-target both auto evpn

interface Vlan10
  no shutdown
  vrf member Tenant
  ip address 192.168.10.1/24
  fabric forwarding mode anycast-gateway

interface Vlan20
  no shutdown
  vrf member Tenant
  ip address 192.168.20.1/24
  fabric forwarding mode anycast-gateway

interface Vlan100
  no shutdown
  vrf member Tenant
  ip forward

interface nve1
  no shutdown
  host-reachability protocol bgp
  source-interface loopback1
  member vni 10000 associate-vrf
  member vni 10010
    mcast-group 225.0.0.2
  member vni 10020
    mcast-group 225.0.0.2

interface Ethernet1/1
  no switchport
  ip address 10.0.0.1/30
  ip router ospf 1 area 0.0.0.0
  ip pim sparse-mode
  no shutdown

interface Ethernet1/2
  switchport access vlan 10

interface Ethernet1/3
  switchport access vlan 20


interface loopback1
  ip address 1.1.1.1/32
  ip router ospf 1 area 0.0.0.0
  ip pim sparse-mode

router ospf 1
  router-id 1.1.1.1
router bgp 65000
  router-id 1.1.1.1
  address-family l2vpn evpn
  neighbor 7.7.7.7
    remote-as 65000
    update-source loopback1
    address-family l2vpn evpn
      send-community
      send-community extended
  vrf Tenant
    address-family ipv4 unicast
      advertise l2vpn evpn
      redistribute direct route-map EVPN
evpn
  vni 10010 l2
    rd auto
    route-target import auto
    route-target export auto
  vni 10020 l2
    route-target import auto
    route-target export auto

SPINE

nv overlay evpn
feature ospf
feature bgp
feature pim
feature interface-vlan
feature vn-segment-vlan-based
feature nv overlay

ip pim rp-address 7.7.7.7 group-list 225.0.0.0/24 bidir
ip pim ssm range 232.0.0.0/8
vlan 1

vrf context management

interface nve1
  no shutdown
  host-reachability protocol bgp

interface Ethernet1/1
  no switchport
  ip address 10.0.0.2/30
  ip router ospf 1 area 0.0.0.0
  ip pim sparse-mode
  no shutdown

interface Ethernet1/2
  no switchport
  ip address 10.1.1.2/30
  ip router ospf 1 area 0.0.0.0
  ip pim sparse-mode
  no shutdown

interface Ethernet1/3
  no switchport
  ip address 10.4.4.1/30
  ip router ospf 1 area 0.0.0.0
  ip pim sparse-mode
  no shutdown

interface Ethernet1/4
  no switchport
  ip address 10.3.3.1/30
  ip router ospf 1 area 0.0.0.0
  ip pim sparse-mode
  no shutdown

interface loopback1
  ip address 7.7.7.7/32
  ip router ospf 1 area 0.0.0.0
  ip pim sparse-mode

router ospf 1
  router-id 7.7.7.7
router bgp 65000
  router-id 7.7.7.7
  address-family l2vpn evpn
    retain route-target all
  neighbor 1.1.1.1
    remote-as 65000
    update-source loopback1
    address-family l2vpn evpn
      send-community
      send-community extended
      route-reflector-client
  neighbor 3.3.3.3
    remote-as 65000
    update-source loopback1
    address-family l2vpn evpn
      send-community
      send-community extended
      route-reflector-client
  neighbor 4.4.4.4
    remote-as 65000
    update-source loopback1
    address-family l2vpn evpn
      send-community
      send-community extended
      route-reflector-client
  neighbor 5.5.5.5
    remote-as 65000
    update-source loopback1
    address-family l2vpn evpn
      send-community
      send-community extended
      route-reflector-client
evpn
  vni 10010 l2
    rd auto
    route-target import auto
    route-target export auto
  vni 10020 l2
    rd auto
    route-target import auto
    route-target export auto
